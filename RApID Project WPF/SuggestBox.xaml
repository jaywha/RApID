<UserControl x:Name="ucSuggestBox" x:Class="RApID_Project_WPF.SuggestBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RApID_Project_WPF"
             mc:Ignorable="d"
             Visibility="{Binding Path=Visibility, ElementName=ucSuggestBox}">
    <Grid x:Name="grdSuggestBox">
        <TextBox x:Name="SuggestionBox" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100"
                 Text="{Binding Path=Text, ElementName=ucSuggestBox}" IsReadOnly="{Binding Path=IsReadOnly, ElementName=ucSuggestBox}"/>
    </Grid>
</UserControl>
