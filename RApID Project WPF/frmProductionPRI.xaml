<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RApID_Project_WPF" x:Class="RApID_Project_WPF.frmProductionPRI"
        xmlns:uc="clr-namespace:RApID_Project_WPF.UserControls"
        Title="Production: Previous Repair Information" Width="825" Height="550" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="TextboxBaseStyle" TargetType="{x:Type TextBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Width" Value="195" />
            <Setter Property="Height" Value="23" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="TextboxUnitIssueStyle" TargetType="{x:Type TextBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Width" Value="225" />
            <Setter Property="Height" Value="23" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="LabelBaseStyle" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style x:Key="DataGridBaseStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="225" />
            <Setter Property="Height" Value="110" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="RTBBaseStyle" TargetType="{x:Type RichTextBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="350" />
            <Setter Property="Height" Value="250" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="TCBaseStyle" TargetType="{x:Type TabControl}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="253" />
            <Setter Property="Height" Value="487" />
        </Style>

    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="825" Height="525" Background="#FFDCD7D7">
            <Label Content="Technician Name:" Margin="0,0,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtTechName" Margin="0,25,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Date Received:" Margin="0,50,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtDateReceived" Margin="0,75,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Date Submitted:" Margin="0,100,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtDateSubmitted" Margin="0,125,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Part Name:" Margin="0,150,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtPartName" Margin="0,175,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Part Number:" Margin="0,200,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtPartNumber" Margin="0,225,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Part Series:" Margin="0,250,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtPartSeries" Margin="0,275,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Commodity Sub-Class:" Margin="0,300,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtCommSubClass" Margin="0,325,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Software Version:" Margin="0,350,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtSW" Margin="0,375,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="Type of Return:" Margin="0,400,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtTOR" Margin="0,425,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <Label Content="From Area:" Margin="0,450,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox x:Name="txtFromArea" Margin="0,475,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <TabControl Margin="200,11,0,0" Style="{StaticResource TCBaseStyle}">
                <TabItem x:Name="tiUI1" Header="Unit Issue #1">
                    <Grid x:Name="gUI1">
                        <Label Content="Reported Issue:" Margin="10,10,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtReportedIssue" Margin="10,33,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Test Result:" Margin="10,60,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox x:Name="txtTestResult" Margin="10,83,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Test Result (Abort Input):" Margin="10,110,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox x:Name="txtTestResultAbort" Margin="10,133,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Issue:" Margin="10,160,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtIssue" Margin="10,183,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Item:" Margin="10,210,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox x:Name="txtItem" Margin="10,233,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Problem:" Margin="10,260,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox x:Name="txtProblem" Margin="10,283,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Parts Replaced:" Margin="10,310,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <DataGrid x:Name="dgMultipleParts" Margin="10,335,0,0" Style="{StaticResource DataGridBaseStyle}" />
                    </Grid>
                </TabItem>

                <TabItem x:Name="tiUI2" Header="Unit Issue #2" IsEnabled="False">
                    <Grid x:Name="gUI2">
                        <Label Content="Reported Issue:" Margin="10,10,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtReportedIssue2" Margin="10,33,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Test Result:" Margin="10,60,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtTestResult2" Margin="10,83,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Test Result (Abort Input):" Margin="10,110,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtTestResultAbort2" Margin="10,133,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Issue:" Margin="10,160,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtIssue2" Margin="10,183,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Item:" Margin="10,210,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtItem2" Margin="10,233,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Problem:" Margin="10,260,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox x:Name="txtProblem2" Margin="10,285,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Parts Replaced:" Margin="10,310,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <DataGrid x:Name="dgMultipleParts2" Margin="10,335,0,0" Style="{StaticResource DataGridBaseStyle}" />
                    </Grid>
                </TabItem>

                <TabItem x:Name="tiUI3" Header="Unit Issue #3" IsEnabled="False">
                    <Grid x:Name="gUI3">
                        <Label Content="Reported Issue:" Margin="10,10,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtReportedIssue3" Margin="10,33,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Test Result:" Margin="10,60,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtTestResult3" Margin="10,83,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Test Result (Abort Input):" Margin="10,110,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtTestResultAbort3" Margin="10,133,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Issue:" Margin="10,160,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtIssue3" Margin="10,183,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Item:" Margin="10,210,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox x:Name="txtItem3" Margin="10,233,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Problem:" Margin="10,260,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox x:Name="txtProblem3" Margin="10,285,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Parts Replaced" Margin="10,310,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <DataGrid x:Name="dgMultipleParts3" Margin="10,335,0,0" Style="{StaticResource DataGridBaseStyle}"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <Label Content="Additional Comments:" Margin="455,10,0,0" Style="{StaticResource LabelBaseStyle}" />
            <RichTextBox x:Name="rtbAddComm" Margin="455,33,0,0" Style="{StaticResource RTBBaseStyle}" />
            <uc:ucLogActionView x:Name="uclaTechActions" Margin="458,288,20,27" Visibility="Hidden"/>
        </Grid>
    </Viewbox>

</Window>
