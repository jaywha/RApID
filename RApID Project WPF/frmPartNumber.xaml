<Window x:Class="RApID_Project_WPF.frmPartNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Part Number Search" Height="350" Width="500" MinWidth="500" MinHeight="350" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Background="#FF6C7F89">
        <Label Content="Part Name Search:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,10,0,0" />
        <TextBox Name="txtSearch" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Width="107" Height="23" Margin="5,35,0,0" TextChanged="txtSearch_TextChanged"/>
        <DataGrid Name="dgvPartNumber" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Height="300" Width="364" ItemsSource="{Binding}" MouseDoubleClick="dgvPartNumber_MouseDoubleClick" BeginningEdit="dgvPartNumber_BeginningEdit" />

    </Grid>
</Window>
