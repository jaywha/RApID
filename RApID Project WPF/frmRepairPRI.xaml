<Window x:Class="RApID_Project_WPF.repairPRI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Repair: Previous Repair Information" Width="900" Height="600" Loaded="Window_Loaded" Background="#FF808285">
    <Window.Resources>
        <Style x:Key="TextboxBaseStyle" TargetType="{x:Type TextBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Width" Value="195" />
            <Setter Property="Height" Value="23" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="TextboxUnitIssueStyle" TargetType="{x:Type TextBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Width" Value="225" />
            <Setter Property="Height" Value="23" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="LabelBaseStyle" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style x:Key="DataGridBaseStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="225" />
            <Setter Property="Height" Value="100" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="RTBBaseStyle" TargetType="{x:Type RichTextBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Height" Value="75" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="QCDQERTB" TargetType="{x:Type RichTextBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="435" />
            <Setter Property="Height" Value="329" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>
        <Style x:Key="TCBaseStyle" TargetType="{x:Type TabControl}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Height" Value="435" />
        </Style>
        <Style x:Key="GBBaseStyle" TargetType="{x:Type GroupBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="215" />
            <Setter Property="Height" Value="180" />
        </Style>
        <Style x:Key="ButtonBaseStyle" TargetType="{x:Type Button}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Width" Value="195" />
            <Setter Property="Height" Value="50" />
        </Style>
    </Window.Resources>
    
    <Viewbox Stretch="Uniform">
        <Grid Width="900" Height="575" Background="#FFDCD7D7">
            <Label Content="Technician Name:" Margin="0,0,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtTechName" Margin="0,25,0,0" Style="{StaticResource TextboxBaseStyle}" />
        
            <Label Content="Date Received:" Margin="0,50,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtDateReceived" Margin="0,75,0,0" Style="{StaticResource TextboxBaseStyle}" />
        
            <Label Content="Date Submitted:" Margin="0,100,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtDateSubmitted" Margin="0,125,0,0" Style="{StaticResource TextboxBaseStyle}" />
        
            <Label Content="Part Name:" Margin="0,150,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtPartName" Margin="0,175,0,0" Style="{StaticResource TextboxBaseStyle}" />
            
            <Label Content="Part Number:" Margin="0,200,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtPartNumber" Margin="0,225,0,0" Style="{StaticResource TextboxBaseStyle}" />
            
            <Label Content="Part Series:" Margin="0,250,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtPartSeries" Margin="0,275,0,0" Style="{StaticResource TextboxBaseStyle}" />
            
            <Label Content="Commodity Sub-Class:" Margin="0,300,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtCommSubClass" Margin="0,325,0,0" Style="{StaticResource TextboxBaseStyle}" />
            
            <Label Content="Software Version:" Margin="0,350,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtSW" Margin="0,375,0,0" Style="{StaticResource TextboxBaseStyle}" />
            
            <Label Content="Type of Return:" Margin="0,400,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtTOR" Margin="0,425,0,0" Style="{StaticResource TextboxBaseStyle}" />
            
            <Label Content="Type of Failure:" Margin="0,450,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtTOF" Margin="0,475,0,0" Style="{StaticResource TextboxBaseStyle}" />
            
            <Label Content="Hours on Unit:" Margin="0,500,0,0" Style="{StaticResource LabelBaseStyle}" />
            <TextBox Name="txtHOU" Margin="0,525,0,0" Style="{StaticResource TextboxBaseStyle}" />

            <TabControl Margin="200,11,0,0" Style="{StaticResource TCBaseStyle}">
                <TabItem Name="tiUI1" Header="Unit Issue #1">
                    <Grid Name="gUI1">
                        <Label Content="Reported Issue:" Margin="10,10,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtReportedIssue" Margin="10,33,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Test Result:" Margin="10,60,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox Name="txtTestResult" Margin="10,83,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Test Result (Abort Input):" Margin="10,110,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox Name="txtTestResultAbort" Margin="10,133,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Cause:" Margin="10,160,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtCause" Margin="10,183,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Replacement:" Margin="10,210,0,0" Style="{StaticResource LabelBaseStyle}" />
                        <TextBox Name="txtReplacement" Margin="10,233,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Parts Replaced:" Margin="10,260,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <DataGrid Name="dgMultipleParts" Margin="10,285,0,0" Style="{StaticResource DataGridBaseStyle}" />
                    </Grid>
                </TabItem>

                <TabItem Name="tiUI2" Header="Unit Issue #2" IsEnabled="False">
                    <Grid Name="gUI2">
                        <Label Content="Reported Issue:" Margin="10,10,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtReportedIssue2" Margin="10,33,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Test Result:" Margin="10,60,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtTestResult2" Margin="10,83,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Test Result (Abort Input):" Margin="10,110,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtTestResultAbort2" Margin="10,133,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Cause:" Margin="10,160,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtCause2" Margin="10,183,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Replacement:" Margin="10,210,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtReplacement2" Margin="10,233,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Parts Replaced:" Margin="10,260,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <DataGrid Name="dgMultipleParts2" Margin="10,285,0,0" Style="{StaticResource DataGridBaseStyle}" />
                    </Grid>
                </TabItem>

                <TabItem Name="tiUI3" Header="Unit Issue #3" IsEnabled="False">
                    <Grid Name="gUI3">
                        <Label Content="Reported Issue:" Margin="10,10,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtReportedIssue3" Margin="10,33,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Test Result:" Margin="10,60,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtTestResult3" Margin="10,83,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Test Result (Abort Input):" Margin="10,110,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtTestResultAbort3" Margin="10,133,0,0" Style="{StaticResource TextboxUnitIssueStyle}" />

                        <Label Content="Cause:" Margin="10,160,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtCause3" Margin="10,183,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Replacement:" Margin="10,210,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <TextBox Name="txtReplacement3" Margin="10,233,0,0" Style="{StaticResource TextboxUnitIssueStyle}"/>

                        <Label Content="Parts Replaced" Margin="10,260,0,0" Style="{StaticResource LabelBaseStyle}"/>
                        <DataGrid Name="dgMultipleParts3" Margin="10,285,0,0" Style="{StaticResource DataGridBaseStyle}"/>
                    </Grid>
                </TabItem>
            </TabControl>
            
            <Label Content="Additional Comments:" Margin="200,450,0,0" Style="{StaticResource LabelBaseStyle}" />
            <RichTextBox Name="rtbAddComm" Margin="200,475,0,0" Style="{StaticResource RTBBaseStyle}" />
            
            <GroupBox Name="gbTechActions" Margin="460,5,0,0" Header="Technician Actions" Style="{StaticResource GBBaseStyle}">
                <Grid>
                    <Label Content="Technician Action #1:" Margin="0,0,0,0" Style="{StaticResource LabelBaseStyle}" />
                    <TextBox Name="txtTechAct1" Margin="0,25,0,0" Style="{StaticResource TextboxBaseStyle}" />
                    
                    <Label Content="Technician Action #2:" Margin="0,50,0,0" Style="{StaticResource LabelBaseStyle}" />
                    <TextBox Name="txtTechAct2" Margin="0,75,0,0" Style="{StaticResource TextboxBaseStyle}" />
                    
                    <Label Content="Technician Action #3:" Margin="0,100,0,0" Style="{StaticResource LabelBaseStyle}" />
                    <TextBox Name="txtTechAct3" Margin="0,125,0,0" Style="{StaticResource TextboxBaseStyle}" />
                </Grid>
            </GroupBox>
            
            <GroupBox Name="gbCustomerInfo" Header="Customer Information" Margin="680,5,0,0" Style="{StaticResource GBBaseStyle}">
                <Grid>
                    <Label Content="Customer Number:" Margin="0,0,0,0" Style="{StaticResource LabelBaseStyle}" />
                    <TextBox Name="txtCustNum" Margin="0,25,0,0" Style="{StaticResource TextboxBaseStyle}" />
                    
                    <Label Content="Customer Name:" Margin="0,50,0,0" Style="{StaticResource LabelBaseStyle}" />
                    <TextBox Name="txtCustName" Margin="0,75,0,0" Style="{StaticResource TextboxBaseStyle}" />
                    
                    <Button Name="btnViewCustInfo" Content="View Full Customer Info" Margin="0,105,0,0" Style="{StaticResource ButtonBaseStyle}" Click="btnViewCustInfo_Click"
                            />
                </Grid>
            </GroupBox>
            
            <Label Content="Full QC/DQE Comments:" Margin="455,190,0,0" Style="{StaticResource LabelBaseStyle}" />
            <RichTextBox Name="rtbQCDQEComments" Margin="455,221,0,0" Style="{StaticResource QCDQERTB}" />
        </Grid>
    </Viewbox>
</Window>
